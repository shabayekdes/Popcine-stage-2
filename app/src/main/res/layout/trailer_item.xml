<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="100dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/trailer_image"
            android:layout_width="@dimen/width_zero"
            android:layout_height="@dimen/width_zero"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/trailer_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/poster"
            android:scaleType="fitXY"
            app:layout_constraintVertical_weight="3"/>

        <ImageView
            android:id="@+id/ic_play_iv"
            android:layout_width="@dimen/width_zero"
            android:layout_height="@dimen/width_zero"
            android:layout_marginBottom="@dimen/margin_side"
            android:layout_marginEnd="@dimen/margin_side"
            android:layout_marginStart="@dimen/margin_side"
            android:layout_marginTop="@dimen/margin_side"
            android:contentDescription="@string/play"
            app:layout_constraintBottom_toBottomOf="@+id/trailer_image"
            app:layout_constraintEnd_toEndOf="@+id/trailer_image"
            app:layout_constraintStart_toStartOf="@+id/trailer_image"
            app:layout_constraintTop_toTopOf="@+id/trailer_image"
            app:srcCompat="@drawable/ic_play" />

        <TextView
            android:id="@+id/trailer_name_tv"
            android:layout_width="@dimen/width_zero"
            android:layout_height="@dimen/width_zero"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/trailer_image"
            app:layout_constraintStart_toStartOf="@+id/trailer_image"
            app:layout_constraintTop_toBottomOf="@+id/trailer_image"
            app:layout_constraintVertical_weight="1"
            tools:text="@string/trailer_name" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>